{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules", "dist", "build", ".react-router"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedFunctionParameters": "info",
				"noUnusedLabels": "info",
				"noUnusedPrivateClassMembers": "info",
				"noUnusedVariables": "info"
			},
			"style": {
				"noVar": "info",
				"useConsistentArrayType": "info",
				"useConst": "info",
				"useDefaultParameterLast": "info",
				"useExportType": "info",
				"useFilenamingConvention": "info",
				"useImportType": "info",
				"useTemplate": "info"
			},
			"suspicious": {
				"noExplicitAny": "info",
				"useErrorMessage": "info"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
